<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.fundacionparaguaya.advisorapp.activities.DashActivity">

    <RelativeLayout
            android:id="@+id/dashboardtopbar"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/topbarBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:baselineAligned="false">

        <LinearLayout
                android:id="@+id/linearlayout_dashactivity_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="start">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/backbutton_desc"
                    android:src="@drawable/dashtopbar_chevronright"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:text="@string/topbar_backbutton"
                    android:textSize="24sp"
                    android:textColor="@color/topbarBackButton"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true">

            <ImageButton
                    android:id="@+id/dashboardtopbar_syncbutton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/ic_dashtopbar_sync"
                    android:background="@drawable/dashtopbar_synccircle"
                    android:layout_marginEnd="12dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/topbar_synclabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/topbar_synclabel"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                <com.github.curioustechizen.ago.RelativeTimeTextView
                        android:id="@+id/last_sync_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:relative_time_prefix="@string/topbar_lastsync_prefix"
                        android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/topbar_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

            <ImageView
                    android:id="@+id/topbar_user_image"
                    android:contentDescription="@string/contentDescription_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/topbar_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                  android:id="@+id/dash_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toTopOf="@id/dashboardTabView"
                  app:layout_constraintTop_toBottomOf="@id/dashboardtopbar">
    </LinearLayout>

    <org.fundacionparaguaya.advisorapp.viewcomponents.DashboardTabBarView
            android:id="@+id/dashboardTabView"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dash_content"
            app:layout_constraintEnd_toEndOf="parent"
    />



</android.support.constraint.ConstraintLayout>
