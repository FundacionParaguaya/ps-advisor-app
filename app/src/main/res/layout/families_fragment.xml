<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="924dp"
    android:layout_height="680dp"
    android:orientation="vertical"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="68dp"
    android:background="#F7F7F7"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/families_label"
            android:text="Familias"
            android:layout_marginLeft="40dp"
            android:paddingRight="24dp"
            android:textSize="48sp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_families_button"
            android:src="@mipmap/plusbutton"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/families_label"
            android:background="@null"
            />
    </RelativeLayout>


    <View android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="292dp"
        android:background="@color/colorPrimary"></View>
    <TextView
        android:id="@+id/all_families_label"
        android:layout_width="159dp"
        android:layout_height="33dp"
        android:text="All Families"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="29dp"
        />
    <android.support.v7.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount ='3'
        android:id="@+id/all_families_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="28dp"
        tools:listitem="@layout/item_allfamilies"
        >

    </android.support.v7.widget.RecyclerView>



</android.support.v7.widget.LinearLayoutCompat>