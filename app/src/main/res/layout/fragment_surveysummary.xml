<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/surveysummary_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/surveysummary_background">

    <org.fundacionparaguaya.advisorapp.viewcomponents.SurveySummaryComponent
        android:id="@+id/surveysummary_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="38dp"
        app:surveysummary_title="@string/survey_summary_backgroundtitle"/>

    <org.fundacionparaguaya.advisorapp.viewcomponents.SurveySummaryComponent
        android:id="@+id/surveysummary_indicators"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingEnd="36dp"
        app:surveysummary_title="@string/survey_summary_indicatortitle"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_surveysummary_submit"
            android:text="Submit"/>
</LinearLayout>