<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120sp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5sp"
    android:layout_marginEnd="16sp"
    android:layout_marginStart="16sp"
    android:layout_marginTop="5sp"
    android:background="@drawable/lifemapindicator_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_lifemapindicator_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:textAppearance="@style/Label.Small"
            tools:text="1." />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_indicatoritem_color"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/indicatoritem_colorshape" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_lifemapindicator_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textAppearance="@style/Label.Small"
        tools:text="Documentation" />
</LinearLayout>