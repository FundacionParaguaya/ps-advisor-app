<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                         android:layout_width="match_parent"
                        android:background="@color/survey_lightyellow"
                         android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:id="@+id/scrollview_bkgquestions_root">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/linearlayout_bkgquestions_container"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/all_continue"
        android:layout_marginBottom="48dp"
        android:id="@+id/btn_bkgquestions_continue"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>