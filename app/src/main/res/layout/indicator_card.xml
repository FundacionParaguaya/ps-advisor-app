<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/survey_card_selected"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    custom:cardBackgroundColor="@color/indicator_card_background"
    custom:cardCornerRadius="25dp">

    <LinearLayout
        android:id="@+id/survey_card_background"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/survey_card">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/survey_card_image"
            android:layout_width="240dp"
            android:layout_height="250dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="7dp"
            android:layout_marginHorizontal="17dp"
            android:background="@drawable/survey_card"
            android:layout_gravity="top"/>

        <TextView
            android:id="@+id/survey_card_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="17dp"
            android:layout_marginHorizontal="17dp"
            android:background="@drawable/survey_card"
            android:padding="16dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="18sp"
            android:text="@string/defaultindicatortext"
            android:layout_gravity="bottom"/>

        </LinearLayout>

</android.support.v7.widget.CardView>