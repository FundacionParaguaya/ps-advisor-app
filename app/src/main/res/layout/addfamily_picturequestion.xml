<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="60dp"
    android:id="@+id/item_picturequestion"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addfamily_picturequestion"
        tools:text="What is your name?"
        android:textSize="48sp"
        android:paddingStart="56dp"
        android:textColor="#333333"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="56dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="300dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/entry_picture_field"
                android:textSize="48sp"
                android:textColor="#333333">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/camera_button"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/camera_button"
                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/gallery_button"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:src="@mipmap/gallery_button"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="180dp"
                    android:id="@+id/response_image"
                    android:background="@color/colorAccent"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#F7F7F7"
                    android:text="Clear"
                    android:textSize="24sp"
                    android:textColor="#EB5757"
                    />
            </LinearLayout>

        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:paddingStart="20dp"
                android:text="Next"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="36sp"
                android:background="#333333"
                android:textColor="#F7F7F7"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                />
        
    </android.support.constraint.ConstraintLayout>

</LinearLayout>