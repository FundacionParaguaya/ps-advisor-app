<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_questionall_title"
            android:text="What country are you from?"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:paddingStart="56dp"
            android:textColor="#333333"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
    >
        <EditText android:layout_width="wrap_content"
                  android:id="@+id/et_questiontext_answer"
                  android:minWidth="250dp"
                  android:hint="Your Response"
                  android:textSize="40sp"
                  android:layout_height="wrap_content"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="36dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:id="@+id/btn_questionall_next"
                android:text="Next"
                android:textSize="36sp"
                android:background="#333333"
                android:textColor="#E5BE45" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>



</LinearLayout>