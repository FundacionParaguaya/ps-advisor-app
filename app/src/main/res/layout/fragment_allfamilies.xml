<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <EditText
        android:id="@+id/all_families_search"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:background="@drawable/login_rounded_edittext"
        android:drawablePadding="27dp"
        android:drawableStart="@drawable/allfamilies_search_icon"
        android:hint="@string/allfamilies_search"
        android:maxLines="1"
        android:paddingEnd="12dp"
        android:paddingStart="20dp"
        android:singleLine="true"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount ='3'
        android:id="@+id/all_families_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        tools:listitem="@layout/item_allfamilies"/>

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="24dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="24dp"
            android:id="@+id/add_families_button"
            android:src="@mipmap/plusbutton"
            android:background="@null"/>
</FrameLayout>