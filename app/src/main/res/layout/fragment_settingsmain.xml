<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_offwhite"
              android:orientation="vertical"
              android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/settings_login_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/settings_login_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="@style/BigHero.Black"
                android:textSize="24sp"
                tools:text="hi" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/settings_login_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="28dp"
                android:background="@drawable/button_primary"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:text="@string/logout"
                android:textAppearance="@style/CardHeading.Light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/settings_releasenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>