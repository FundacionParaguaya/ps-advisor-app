<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dashbar_background"
    android:orientation="vertical">

    <org.fundacionparaguaya.adviserplatform.ui.dashboard.DashboardTab
        android:id="@+id/family_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5sp"
        custom:tabCaption="@string/familytab_title"
        custom:tabImage="@drawable/dashtab_friendsicon" />

    <org.fundacionparaguaya.adviserplatform.ui.dashboard.DashboardTab
        android:id="@+id/settings_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        custom:tabCaption="@string/settingstab_title"
        custom:tabImage="@drawable/dashtab_settingsicon" />

</LinearLayout>
