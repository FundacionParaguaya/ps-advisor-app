<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.fundacionparaguaya.advisorapp.activities.MainActivity">

    <!--Added for testing-->
    <org.fundacionparaguaya.advisorapp.viewcomponents.DashboardTabBarView
            android:id="@+id/dashboardTabView"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/dashboardtopbar"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:background="@color/topbarBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dashboardTabView"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/dashboardtopbar_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/backbutton_desc"
            android:src="@drawable/dashtopbar_backbutton"
            android:tint="@color/topbarbackbuttonDark"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                  android:background="@color/colorPrimaryDark"
                  android:id="@+id/dash_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toEndOf="@id/dashboardTabView"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/dashboardtopbar">
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
