<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/survey_lightyellow"
    android:orientation="vertical"
    android:paddingVertical="60dp"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_questionall_title"
        android:text="What country are you from?"
        android:textSize="48sp"
        android:layout_marginStart="56dp"
        android:textColor="#333333"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="56dp"
    >
        <Spinner
            android:layout_width="wrap_content"
            android:minWidth="240dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:id="@+id/spinner_questiondropdown"
            android:layout_alignParentStart="true"
            android:textSize="48sp"
            android:textColor="#333333"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/btn_questionall_next"
            android:text="Next"
            android:textSize="36sp"
            android:background="#333333"
            android:textColor="#E5BE45"/>
    </RelativeLayout>



</LinearLayout>