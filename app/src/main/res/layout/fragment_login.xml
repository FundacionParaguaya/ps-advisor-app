<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="org.fundacionparaguaya.advisorapp.activities.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:src="@drawable/dashtabview_fplogo"
                android:layout_marginTop="100dp"/>

            <TextView
                android:id="@+id/login_incorrect_credentials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="53dp"
                android:text="@string/login_incorrectcredentials"
                android:textSize="18sp"
                android:textColor="@color/login_incorrectcredentials"
                android:textStyle="normal"
                android:fontFamily="@font/opensans_semibold"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/login_email"
                android:layout_width="256dp"
                android:layout_height="44dp"
                android:background="@drawable/login_rounded_edittext"
                android:hint="@string/login_emailprompt"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_marginBottom="12dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/login_mailicon"
                android:drawablePadding="27dp"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="256dp"
                android:layout_height="44dp"
                android:background="@drawable/login_rounded_edittext"
                android:hint="@string/login_passwordprompt"
                android:textSize="18sp"
                android:imeActionId="6"
                android:imeActionLabel="@string/login_action_signin"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="12dp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/login_passwordicon"
                android:drawablePadding="27dp"/>


            <Button
                android:id="@+id/login_loginbutton"
                style="?android:textAppearanceSmall"
                android:background="@drawable/login_loginbutton"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginTop="74dp"
                android:layout_marginBottom="75dp"
                android:text="@string/login_action_signin"
                android:textColor="@color/login_buttontext"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/login_passwordreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_resetpassword"
                android:textColor="@color/login_passwordreset"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>