<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="420"
                                             android:layout_height="620dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/white"
                                             android:clipToPadding="false">

    <LinearLayout android:layout_width="match_parent" android:layout_height="56dp"
                  android:scaleType="centerCrop"
                  android:clipToPadding="false"
                  android:background="@drawable/familydetail_subtab_header"
                  android:id="@+id/view_familyindicators_header" android:layout_alignParentBottom="true"
                  android:orientation="vertical"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="@id/view_familyindicators_header">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="@style/SmallHero.White"
                      android:text="Indicators"
                      android:layout_centerVertical="true"
                      android:layout_alignParentStart="true"
                      android:gravity="start"
                      android:layout_marginStart="12dp"/>

            <ImageButton android:layout_width="56dp"
                         android:layout_height="56dp"
                         android:scaleType="fitXY"
                         android:gravity="end"
                         android:layout_alignParentEnd="true"
                         android:background="@color/float_transparent"
                         android:src="@drawable/familydetail_subtab_mainaction"/>
        </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/view_familyindicators_header">
        <Spinner
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/nice_spinner"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_marginVertical="16dp"
                android:layout_marginRight="12dp"
                android:overlapAnchor="false"
                android:background="@drawable/spinner_background"
                android:layout_height="20dp"/>
    </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>



    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>