<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_black</item>
        <item name="android:buttonStyle">@style/Button.Primary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:disabledAlpha">0.2</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>

    <!--========= Button Styles =========-->

    <style name="WarningButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_orange</item>
    </style>

    <style name="LightButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name ="android:paddingBottom">12dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/all_button_large</item>
        <item name="android:textAppearance">@style/CardHeading.Light</item>
    </style>


    <!-- Used for buttons that are in a header of something, on a colored background. (Like the save button on the
    priorities page-->
    <style name="Button.Header">
        <item name="android:theme">@style/LightButtonTheme</item>
        <item name="android:background">@drawable/all_button_large_header</item>
        <item name="android:textAppearance">@style/CardHeading</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name ="android:paddingBottom">4dp</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/all_button_large_outline</item>
        <item name="android:textAppearance">@style/CardHeading</item>
        <item name="android:textColor">?attr/colorButtonNormal</item>
    </style>

    <style name="Button.Secondary.Warning">
        <item name="android:background">@drawable/all_button_large_outline_warning</item>
    </style>

    <!--========= Text Input Styles =========-->
    <style name="ShortTextInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:textAppearance">@style/Body.Large</item>
        <item name="android:textCursorDrawable">@drawable/dark_cursor</item>
        <item name="backgroundTint">@color/app_black</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:hint">@string/your_response</item>
    </style>

    <style name="TextWithIcon">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/login_rounded_edittext</item>
        <item name="android:drawablePadding">27dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Label</item>
    </style>
    
    <style name="TextWithIcon.Username">
        <item name="android:drawableStart">@drawable/login_username_icon</item>
        <item name="android:hint">@string/login_username</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="TextWithIcon.Password">
        <item name="android:drawableStart">@drawable/login_passwordicon</item>
        <item name="android:hint">@string/login_passwordprompt</item>
        <item name="android:imeActionId">6</item>
        <item name="android:imeActionLabel">@string/login_action_signin</item>
        <item name="android:inputType">textPassword</item>
    </style>


    <!--========= Spinner Styles =========-->

    <style name="spinnerItemStyle" parent="Label">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity"></item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="Label">
        <item name="android:layout_alignParentEnd">true</item>

    </style>

    <!--========= Spinner Styles =========-->

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!--========= Font Styles =========-->
    <style name="BigHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="BigHero.Black">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="SmallHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="Label.Light">
        <item name="android:textColor">#FDFDFD</item>
    </style>

    <style name="Label.Small" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#757478</item>
    </style>

    <style name="CardHeading" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#313131</item>
    </style>

    <style name="CardHeading.Light">
        <item name="android:textColor">@color/app_white</item>
    </style>
    
    <style name="Body.Large" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Body" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757478</item>
    </style>


</resources>
