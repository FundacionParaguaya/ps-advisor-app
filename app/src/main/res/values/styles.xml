<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--========= Font Styles =========-->
    <style name="OpenSans.Black" parent="@android:style/TextAppearance">
        <item name="android:textColor">#313131</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="OpenSans.Black.BigHero" parent="OpenSans.Black">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="OpenSans.Black.Heading" parent="OpenSans.Black">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>


</resources>
