<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--========= Font Styles =========-->
    <style name="BigHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="BigHero.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SmallHero.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
